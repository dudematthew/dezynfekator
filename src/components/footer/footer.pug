block append head 
    link(rel='stylesheet', href='./components/footer/footer.sass')

mixin footer(props)
    .footer#footer
        .footer__info
            .footer__info__title #{props.infoTitle}
            .footer__info__subtitle #{props.infoSubtitle}
            .footer__info__rights #{props.infoRights}
        .footer__contact
            .footer__contact__title #{props.contactTitle}
            .footer__contact__phone-number
                a(href='tel:' + props.contactPhoneNumberAttrib) #{props.contactPhoneNumber}
            .footer__contact__email 
                a(href='mailto: ' + props.contactEmailAttrib) #{props.contactEmail}
